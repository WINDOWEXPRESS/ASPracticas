<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut9.plantillaexamen.DetallePelicula">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/u9pE_activityDP_textV_nombrePeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE PELICULA"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/u9pE_activityDP_textV_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/u9pE_activityDP_textV_descripcionPeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/u9pE_activityDP_textV_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/u9pE_activityDP_textV_estrellasPeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTRELLAS"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/u9pE_activityDP_textV_estrellas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>