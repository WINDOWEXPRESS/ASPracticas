<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut03.u3e5.SiguienteNumero">

    <Button
        android:id="@+id/u3a5_bt_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btConfirmar"
        app:layout_constraintEnd_toEndOf="@+id/u3a5_tView_numeroSiguiente"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/u3a5_tView_numeroSiguiente"
        app:layout_constraintTop_toBottomOf="@+id/u3a5_tView_numeroSiguiente" />

    <TextView
        android:id="@+id/u3a5_tView_numeroSiguiente"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="256dp"
        android:gravity="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/u3a5_tView_mensajeSiguienteNumero"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="El numero siguiente es "
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/u3a5_tView_numeroSiguiente"
        app:layout_constraintEnd_toEndOf="@+id/u3a5_tView_numeroSiguiente"
        app:layout_constraintStart_toStartOf="@+id/u3a5_tView_numeroSiguiente" />
</androidx.constraintlayout.widget.ConstraintLayout>