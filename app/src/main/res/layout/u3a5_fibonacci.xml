<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut03.u3e5.Fibonacci">

    <TextView
        android:id="@+id/u3a5_primerNumero"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="@string/u3a5_valor_uno"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/u3a5_segundoNumero"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/u3a5_primerNumero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/u3a5_primerNumero"
        app:layout_constraintTop_toBottomOf="@+id/u3a5_primerNumero" />

    <Button
        android:id="@+id/u3a5_bt_siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="@+id/u3a5_segundoNumero"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/u3a5_segundoNumero"
        app:layout_constraintTop_toBottomOf="@+id/u3a5_segundoNumero" />
</androidx.constraintlayout.widget.ConstraintLayout>