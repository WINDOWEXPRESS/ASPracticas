<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut8.ejemplos.numeroaleatorio.NumeroAleatorio">

    <TextView
        android:id="@+id/u8e_textV_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/u8e_button_generar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Generar"
        app:layout_constraintEnd_toEndOf="@+id/u8e_textV_numero"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/u8e_textV_numero"
        app:layout_constraintTop_toBottomOf="@+id/u8e_textV_numero" />

    <ProgressBar
        android:id="@+id/u8e_progressB_cargar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="@+id/u8e_button_generar"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/u8e_button_generar"
        app:layout_constraintTop_toBottomOf="@+id/u8e_button_generar" />
</androidx.constraintlayout.widget.ConstraintLayout>