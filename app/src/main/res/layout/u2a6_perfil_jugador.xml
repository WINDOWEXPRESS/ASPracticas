<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/grey"
    tools:Context=".MainActivity">

    <ImageView
        android:id="@+id/u2a6_iView_JBatman"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:padding="20dp"
        app:srcCompat="@drawable/u2a6_avatar_jugador_batman"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/u2a6_iView_JackSparrow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/u2a6_avatar_jugador_jack"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/u2a6_iView_JHacker"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/u2a6_avatar_jugador_hacker"
        tools:ignore="ContentDescription" />

</LinearLayout>