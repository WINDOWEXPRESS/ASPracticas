<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/u9pE_activityP_recyclerV_lista"
        android:layout_width="409dp"
        android:layout_height="638dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/u9pE_activityP_progressB_cargar"
        style="?android:attr/progressBarStyle"
        android:layout_width="180dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="@+id/u9pE_activityP_recyclerV_lista"
        app:layout_constraintEnd_toEndOf="@+id/u9pE_activityP_recyclerV_lista"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/u9pE_activityP_recyclerV_lista"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        tools:visibility="gone" />

    <Button
        android:id="@+id/u9pE_activityP_button_cargarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Obtener Datos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u9pE_activityP_recyclerV_lista" />

    <Button
        android:id="@+id/u9pE_activityP_button_aniadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir Pelicula"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u9pE_activityP_recyclerV_lista" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/u9pE_activityP_textV_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOMBRE"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/u9pE_activityP_textV_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DESCRIPCION"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/u9pE_activityP_textV_estrella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ESTRELLAS"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>